generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum UserRole {
  CUSTOMER
  ADMIN
  OWNER
}

model User {
  id        Int      @id @default(autoincrement())
  google_id String?  @unique @db.VarChar(100)
  email     String   @unique
  username  String   @unique
  password  String?  @db.VarChar(100)
  name      String   @db.VarChar(100)
  role      UserRole @default(CUSTOMER)

  token            String?   @db.Text
  token_expired_at DateTime?

  is_verified       Boolean   @default(false)
  verify_token      String?   @unique @db.VarChar(100)
  verify_expires_at DateTime?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  resend_count     Int       @default(0)
  last_resend_time DateTime?

  password_reset_token      String?   @unique @db.VarChar(100)
  password_reset_expires_at DateTime?

  pass_reset_count     Int       @default(0)
  pass_reset_last_time DateTime?

  service_logs ServiceLog[]
  product_logs ProductLog[]

  is_active Boolean @default(true)

  @@map("users")
}

model Technician {
  id            Int     @id @default(autoincrement())
  name          String  @db.VarChar(100)
  signature_url String? @db.Text
  is_active     Boolean @default(true)

  services Service[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  deleted_at DateTime?

  @@map("technicians")
}

model Service {
  id            Int           @id @default(autoincrement())
  service_id    String        @unique
  brand         Brand         @default(OTHER)
  model         String        @db.VarChar(100)
  customer_name String        @db.VarChar(100)
  phone_number  String        @db.VarChar(100)
  status        ServiceStatus @default(PENDING)

  description     String? @db.Text
  technician_note String? @db.Text

  discount     Int @default(0)
  down_payment Int @default(0)
  total_price  Int @default(0)

  service_list ServiceItem[]

  tracking_token String @unique @default(uuid()) @db.VarChar(100)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  technician_id Int
  technician    Technician   @relation(fields: [technician_id], references: [id])
  service_logs  ServiceLog[]

  deleted_at DateTime?

  grace_period_start DateTime?

  @@index([deleted_at])
  @@map("services")
}

model ServiceItem {
  id    Int    @id @default(autoincrement())
  name  String @db.VarChar(100)
  price Int

  service_id Int

  service Service @relation(fields: [service_id], references: [id], onDelete: Cascade)

  @@map("service_items")
}

model ServiceLog {
  id         Int @id @default(autoincrement())
  service_id Int
  user_id    Int

  action      ServiceLogAction
  description String @db.Text

  created_at DateTime @default(now())

  service Service @relation(fields: [service_id], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [user_id], references: [id])

  @@map("service_logs")
}

enum ServiceLogAction {
  CREATED
  UPDATE_INFO
  UPDATE_STATUS
  UPDATE_TECHNICIAN
  UPDATE_SERVICE_LIST
  UPDATE_DISCOUNT
  UPDATE_DOWN_PAYMENT
  UPDATE_FINANCIALS
  DELETED
  RESTORED
}

enum ServiceStatus {
  PENDING
  PROCESS
  FINISHED
  CANCELLED
  TAKEN
}

model Product {
  id           Int      @id @default(autoincrement())
  name         String   @db.VarChar(100)
  brand        Brand    @default(OTHER)
  manufacturer String   @default("ORIGINAL") @db.VarChar(100)
  price        Int      @default(0)
  cost_price   Int      @default(0)
  category     Category @default(OTHER)
  stock        Int      @default(0)
  image_url    String?  @db.Text

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  product_logs ProductLog[]

  @@map("products")
}

model ProductLog{
  id         Int      @id @default(autoincrement())
  product_id Int
  user_id    Int
  action     ProductLogAction
  quantity_change Int
  description String
  created_at DateTime @default(now())

  product Product @relation(fields: [product_id], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [user_id], references: [id])

  @@map("product_logs")
}

enum ProductLogAction {
  CREATED          
  UPDATED           
  RESTOCK           
  SALE_OFFLINE      
  ADJUST_DAMAGE     
  ADJUST_LOST      
  ADJUST_OPNAME     
}

enum Brand {
  APPLE
  SAMSUNG
  XIAOMI
  OPPO
  VIVO
  REALME
  INFINIX
  TECNO
  ITEL
  ASUS
  HUAWEI
  SONY
  GOOGLE
  NOKIA
  LENOVO
  UNIVERSAL
  OTHER
}

enum Category {
  LCD
  BATTERY
  CONNECTOR
  FLEXIBLE
  CAMERA
  SPEAKER
  BACKDOOR
  GLASS
  IC
  ACCESSORY
  OTHER
}
