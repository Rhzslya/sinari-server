generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"

}

datasource db {
  provider = "mysql"
}

model User {
  id            Int       @id @default(autoincrement())
  google_id     String?   @unique @db.VarChar(100)
  email         String    @unique
  username      String    @unique
  password      String?   @db.VarChar(100) // optional if google login
  name          String    @db.VarChar(100)
  role          String    @default("customer") @db.VarChar(100)

  token         String?   @db.Text
  token_expired_at DateTime?

  is_verified    Boolean   @default(false)
  verify_token   String?   @unique @db.VarChar(100)
  verify_expires_at DateTime?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  
  resend_count Int @default(0)
  last_resend_time DateTime?

  password_reset_token      String?   @unique @db.VarChar(100)
  password_reset_expires_at DateTime?

  pass_reset_count    Int       @default(0)
  pass_reset_last_time DateTime?
  
  @@map("users")
}

model Service{
  id              Int @id @default(autoincrement())
  brand           String @db.VarChar(100)
  model           String @db.VarChar(100)
  customer_name   String @db.VarChar(100)
  phone_number    String @db.VarChar(100)
  status          ServiceStatus @default(PENDING)

  description     String? @db.Text
  technician_note String? @db.Text

  discount        Int @default(0) // % discount
  total_price     Int @default(0)   // calculate total price

  service_list    ServiceItem[] 

  tracking_token  String @unique @default(uuid()) @db.VarChar(100)

  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  @@map("services")
}

model ServiceItem{
  id            Int @id @default(autoincrement())
  name          String @db.VarChar(100)
  price         Int

  service_id    Int // foreign key

  service       Service @relation(fields: [service_id], references: [id], onDelete: Cascade)

  @@map("service_items")
}

enum ServiceStatus {
  PENDING
  PROCESS
  FINISHED
  CANCELLED
  TAKEN
}

model Product{
  id            Int      @id @default(autoincrement())
  name          String   @db.VarChar(100)
  brand         Brand    @default(OTHER)
  manufacturer  String   @default("ORIGINAL") @db.VarChar(100)
  price         Int      @default(0)
  cost_price    Int      @default(0)
  category      Category @default(OTHER)
  stock         Int      @default(0)
  image_url     String?  @db.Text

  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  @@map("products")
}

enum Brand {
  APPLE
  SAMSUNG
  XIAOMI
  OPPO
  VIVO
  REALME
  INFINIX
  TECNO
  ITEL
  ASUS
  HUAWEI
  SONY
  GOOGLE
  NOKIA
  LENOVO
  UNIVERSAL 
  OTHER
}

enum Category {
  LCD
  BATTERY
  CONNECTOR
  FLEXIBLE
  CAMERA
  SPEAKER
  BACKDOOR
  GLASS
  IC
  ACCESSORY
  OTHER
}